<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mjtech.clan">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".CLAN"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".main"
            android:label="@string/title_activity_main"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".course"
            android:label="@string/title_activity_course"></activity>
        <activity
            android:name=".course_overview"
            android:label="@string/title_activity_course_overview"></activity>
        <activity
            android:name=".course_announcement"
            android:label="@string/title_activity_course_announcement"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
